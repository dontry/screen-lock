<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout
    	android:id="@+id/tv_gesture_name"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >
    </LinearLayout>
    <ImageView android:layout_gravity="center_horizontal|center" android:layout_height="wrap_content" android:id="@+id/imgv_gesture_pic" android:layout_width="wrap_content" android:src="@drawable/icon" android:layout_margin="20dp"></ImageView>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/create_gesture" android:id="@+id/btn_create_gesture" android:layout_gravity="center_horizontal"></Button>
</LinearLayout>
